<h2>Your account</h2>
<p>Hello {{user.name}}</p>
<table>
    <thead>
    <tr>
        <th>
            Key
        </th>
        <th>
           Property
        </th>
    </tr>
    </thead>
    {{#with user}}
        <tbody>
        <tr>
            <th>
                Name
            </th>
            <td>
                {{name}}
            </td>
        </tr>
            <th>
                Email
            </th>
            <td>
                {{email}}
            </td>
        </tr>
        <tr>
            <th>
                Phone
            </th>
            <td>
                {{phone}}
            </td>
        </tr>
        <tr>
            <th>
                Notes
            </th>
            <td>
                {{notes}}
            </td>
        </tr>
        <tr>
            <th>
                Options
            </th>
            <td>
                <a href="/admin/profile/{{_id}}"><button class="button-option">Edit profile</button></a>
                <a href="/admin/profile/password/{{_id}}"><button class="button-option">Change password</button></a>
                <a href="/admin/profile/deleteConfirm/{{_id}}"><button class="button-option">Delete account</button></a>
            </td>
        <tr>
        </tbody>
    {{/with}}
</table>
<br><br>
{{>goBack}}